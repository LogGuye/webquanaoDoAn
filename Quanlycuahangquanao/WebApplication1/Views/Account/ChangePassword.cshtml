@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="center-form">
    <h2>Đổi mật khẩu</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input name="oldPassword" type="password" placeholder="Mật khẩu cũ" required /><br />
        <input name="newPassword" type="password" placeholder="Mật khẩu mới" required /><br />
        <button type="submit">Đổi mật khẩu</button>
        if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }
        if (ViewBag.Success != null)
        {
            <div class="success">@ViewBag.Success</div>
        }
    }
</div>
<style>
    .center-form {
        max-width: 340px;
        margin: 60px auto;
        background: rgba(255,255,255,0.85);
        padding: 24px;
        border-radius: 12px;
        box-shadow: 0 4px 18px #8882;
    }

        .center-form h2 {
            text-align: center;
        }

        .center-form input, .center-form button {
            width: 100%;
            margin-bottom: 10px;
            padding: 7px;
            border-radius: 6px;
        }

    .error {
        color: #c00;
    }

    .success {
        color: #0a2;
    }
</style>
