@model WebApplication1.Models.KhachHang
@{
    ViewBag.Title = "Thông tin tài khoản";
    // Nếu không có ảnh thì dùng mặc định ở Assets/Avatar/avatar-default.png
    var avatar = string.IsNullOrEmpty(Model.AnhDaiDien) ? "/Assets/Avatar/avatar-default.png" : Model.AnhDaiDien;
}

<div class="profile-container" style="max-width:480px;margin:38px auto;padding:32px;background:#fff;border-radius:16px;box-shadow:0 4px 24px #0001;">
    <h2 style="text-align:center;font-weight:bold;margin-bottom:24px;">Thông tin tài khoản</h2>
    <div style="text-align:center;">
        <img src="@avatar" style="width:100px;height:100px;border-radius:50%;object-fit:cover;border:3px solid #22aaff;margin-bottom:18px;" />
    </div>
    <table style="width:100%;margin-top:8px;font-size:1.08rem;">
        <tr><td style="padding:9px 0;width:110px;">Họ tên</td><td>@Model.TenKH</td></tr>
        <tr><td style="padding:9px 0;">Email</td><td>@Model.Email</td></tr>
        <tr><td style="padding:9px 0;">Số điện thoại</td><td>@Model.SoDienThoai</td></tr>
    </table>
    <div style="text-align:center;margin-top:25px;">
        <a href="@Url.Action("EditProfile")" class="btn" style="padding:9px 38px;border-radius:23px;background:#008bff;color:#fff;font-weight:bold;text-decoration:none;">Sửa thông tin</a>
    </div>
</div>
