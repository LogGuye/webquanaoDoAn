@model List<WebApplication1.Models.SanPham>
@{
    var danhMuc = ViewBag.DanhMuc;
    var selectedCategoryId = ViewBag.SelectedCategoryId as int? ?? 0;
    var allCategories = ViewBag.AllCategories as List<WebApplication1.Models.DanhMuc>;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .banner-home {
        width: 100%;
        max-width: 1100px;
        margin: 38px auto 36px auto;
        background: linear-gradient(90deg, #e0e6ee 20%, #d2dae7 100%);
        box-shadow: 0 4px 40px #0001;
        border-radius: 22px;
        text-align: center;
        padding: 42px 10px 32px 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 2.1rem;
        letter-spacing: 2px;
        position: relative;
        color: #333;
        min-height: 120px;
    }

        .banner-home .banner-title {
            font-size: 2.2rem;
            color: #333;
            font-weight: 800;
        }

        .banner-home .banner-sub {
            font-size: 1.2rem;
            color: #333;
            font-weight: 400;
            margin-top: 10px;
        }


    .categories-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 38px;
        justify-content: center;
        align-items: flex-end;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 2px 8px #0001;
        padding: 16px 0;
        margin-bottom: 32px;
        max-width: 1100px;
        margin-left: auto;
        margin-right: auto;
    }

    .category-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
        min-width: 85px;
        color: #444;
        font-weight: 600;
        text-decoration: none;
        transition: color .15s, background .15s;
        padding: 8px 12px;
        border-radius: 14px;
    }

        .category-item.active, .category-item:hover {
            color: #00bfff !important;
            background: #f2fbff;
        }

        .category-item span {
            margin-top: 2px;
            font-size: 1.04rem;
        }

    .products-list {
        width: 100%;
        max-width: 1120px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 28px;
    }

    .media (max-width: 900px) {
        .products-list

    {
        grid-template-columns: repeat(2,1fr);
    }

    }

    .media (max-width: 600px) {
        .products-list

    {
        grid-template-columns: 1fr;
    }

    }

    .product-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 32px #0001;
        padding: 18px 18px 19px 18px;
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: box-shadow .18s, transform .15s;
        position: relative;
        height: 350px;
        min-height: 350px;
        max-height: 350px;
    }

        .product-card:hover {
            box-shadow: 0 8px 32px #56b6ff40;
            transform: translateY(-6px) scale(1.025);
        }

    .product-img {
        width: 100%;
        max-width: 140px;
        height: 140px;
        border-radius: 16px;
        object-fit: cover;
        margin-bottom: 12px;
    }

    .product-title {
        font-weight: bold;
        font-size: 1.09rem;
        color: #222;
        margin-bottom: 7px;
        text-align: center;
        min-height: 42px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-desc {
        font-size: 0.98rem;
        color: #888;
        margin-bottom: 0; /* bỏ margin dưới */
        text-align: center;
        flex: 1 1 auto;
        width: 100%;
        /* Cho phép chiếm không gian còn lại */
        display: -webkit-box;
        -webkit-line-clamp: 3; /* số dòng hiển thị */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 54px; /* ~3 dòng */
        max-height: 54px;
        align-items: flex-start;
        justify-content: flex-start;
    }

    .product-bottom {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: auto;
    }

    .product-price {
        font-weight: bold;
        color: #00bfff;
        margin-bottom: 12px;
        font-size: 1.12rem;
    }

    .product-actions {
        display: flex;
        gap: 9px;
        width: 100%;
        justify-content: center;
        margin-top: 0;
    }

    .btn-detail, .btn-buy {
        border-radius: 13px;
        border: none;
        padding: 5px 15px;
        font-size: 0.98rem;
        font-weight: 600;
        text-decoration: none;
        transition: background .15s, color .15s;
        cursor: pointer;
    }

    .btn-detail {
        background: #eef5ff;
        color: #0986d7;
    }

        .btn-detail:hover {
            background: #00bfff;
            color: #fff;
        }

    .btn-buy {
        background: #ffb570;
        color: #fff;
    }

        .btn-buy:hover {
            background: #ff3a55;
            color: #fff;
        }
</style>

<div class="banner-home">
    <div class="banner-title">
        <span style="font-size:2rem;">🌟</span> @(danhMuc != null ? danhMuc.TenDanhMuc : "") <span style="font-size:2rem;">🌟</span>
    </div>
</div>


<div class="categories-bar">
    @foreach (var dm in allCategories)
    {
        <a href="@Url.Action("ChiTiet", "List", new { id = dm.MaDanhMuc })"
           class="category-item @(selectedCategoryId == dm.MaDanhMuc ? "active" : "")">
            <span>@dm.TenDanhMuc</span>
        </a>
    }
</div>

<div class="products-list">
    @foreach (var sp in Model)
    {
        <div class="product-card">
            <img class="product-img" src="@(string.IsNullOrEmpty(sp.HinhAnh) ? Url.Content("~/Assets/images/images-default.png") : Url.Content(sp.HinhAnh))" alt="Ảnh sản phẩm" />
            <div class="product-title">@sp.TenSP</div>
            <div class="product-desc">@sp.MoTa</div>
            <div class="product-bottom">
                <div class="product-price">@String.Format("{0:n0}", sp.GiaBan) đ</div>
                <div class="product-actions">
                    <a href="@Url.Action("Details", "SanPham", new { id = sp.MaSP })" class="btn-detail"><i class="fa fa-eye"></i> Xem</a>
                    <a href="@Url.Action("AddToCart", "GioHang", new { id = sp.MaSP })" class="btn-buy"><i class="fa fa-cart-plus"></i> Mua ngay</a>
                </div>
            </div>
        </div>
    }
</div>

